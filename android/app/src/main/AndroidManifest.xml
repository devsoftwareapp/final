<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Temel internet izni -->
    <uses-permission android:name="android.permission.INTERNET" />
    
    <!-- A durumu kontrol칲 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <!-- TAM DOSYA ER캻뤣M 캻ZN캻 (Android 11+ i칞in) -->
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" />
    
    <!-- Android 10 ve alt캼 i칞in standart depolama izinleri -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" 
                     android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" 
                     android:maxSdkVersion="32" />

    <!-- Kamera izni (belge tarama i칞in) -->
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- 游댮 YEN캻: Yazd캼rma i칞in POST_NOTIFICATIONS izni (Android 13+) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- Package visibility queries (Android 11+ i칞in) -->
    <queries>
        <!-- T칲m dosya eri를m izni i칞in -->
        <intent>
            <action android:name="android.settings.MANAGE_APP_ALL_FILES_ACCESS_PERMISSION" />
            <data android:scheme="package" />
        </intent>
        
        <!-- PDF g칬r칲nt칲leyiciler -->
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <data android:mimeType="application/pdf" />
        </intent>
        
        <!-- Dosya se칞iciler -->
        <intent>
            <action android:name="android.intent.action.GET_CONTENT" />
            <data android:mimeType="*/*" />
        </intent>
        
        <!-- E-posta uygulamalar캼 -->
        <intent>
            <action android:name="android.intent.action.SENDTO" />
            <data android:scheme="mailto" />
        </intent>
        
        <!-- Web taray캼c캼lar -->
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <data android:scheme="http" />
        </intent>
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <data android:scheme="https" />
        </intent>
        
        <!-- 游릭 YEN캻: Yazd캼rma uygulamalar캼 -->
        <intent>
            <action android:name="android.printservice.PrintService" />
        </intent>
        
        <!-- 游릭 YEN캻: Payla캼m uygulamalar캼 -->
        <intent>
            <action android:name="android.intent.action.SEND" />
            <data android:mimeType="*/*" />
        </intent>
        
        <!-- 游릭 YEN캻: Di른r PDF okuyucular -->
        <package android:name="com.adobe.reader" />
        <package android:name="com.google.android.apps.pdfviewer" />
        <package android:name="com.foxit.mobile.pdf.lite" />
        <package android:name="com.sec.android.app.sbrowser" />
    </queries>

    <application
        android:label="PDF Reader"
        android:name="${applicationName}"
        android:icon="@mipmap/ic_launcher"
        android:hardwareAccelerated="true"
        android:usesCleartextTraffic="true"
        android:requestLegacyExternalStorage="true"
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:theme="@style/LaunchTheme">
        
        <!-- WebView i칞in 칬nemli -->
        <meta-data
            android:name="android.webkit.WebView.EnableSafeBrowsing"
            android:value="true" />
            
        <!-- InAppWebView i칞in gerekli -->
        <meta-data
            android:name="android.webkit.WebView.MetricsOptOut"
            android:value="true" />
        
        <!-- 游릭 YEN캻: Printing plugin i칞in -->
        <meta-data
            android:name="android.webkit.WebView.EnableSafeBrowsing"
            android:value="false" />
        
        <!-- Ana Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:theme="@style/LaunchTheme"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|smallestScreenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize"
            android:screenOrientation="portrait">
            
            <!-- Splash screen i칞in -->
            <meta-data
                android:name="io.flutter.embedding.android.SplashScreenDrawable"
                android:resource="@drawable/launch_background" />
            
            <!-- Normal tema -->
            <meta-data
                android:name="io.flutter.embedding.android.NormalTheme"
                android:resource="@style/NormalTheme" />
            
            <!-- Uygulama ba륿at캼c캼 -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            
            <!-- 칐zel scheme: settings://all_files i칞in -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="settings" 
                      android:host="all_files" />
            </intent-filter>
            
            <!-- Harici PDF dosyalar캼n캼 a칞mak i칞in -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="file" />
                <data android:mimeType="application/pdf" />
                <data android:pathPattern=".*\\.pdf" />
                <data android:host="*" />
            </intent-filter>
            
            <!-- content:// URI'leri i칞in -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:scheme="content" />
                <data android:mimeType="application/pdf" />
            </intent-filter>

            <!-- Di른r uygulamalardan PDF almak i칞in -->
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="application/pdf" />
            </intent-filter>

            <!-- 칂oklu dosya payla캼m캼 -->
            <intent-filter>
                <action android:name="android.intent.action.SEND_MULTIPLE" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="application/pdf" />
            </intent-filter>

            <!-- 游릭 YEN캻: Yazd캼rma intent'leri -->
            <intent-filter>
                <action android:name="android.intent.action.PRINT" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="application/pdf" />
            </intent-filter>

        </activity>

        <!-- Flutter embedding -->
        <meta-data
            android:name="flutterEmbedding"
            android:value="2" />

        <!-- FileProvider (PDF payla캼m캼 i칞in) -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <!-- 游릭 YEN캻: Printing plugin i칞in provider -->
        <provider
            android:name="es.antonborri.printing.PrintFileProvider"
            android:authorities="${applicationId}.printfileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/printing_paths" />
        </provider>

        <!-- PDF Viewer Activity (Opsiyonel - sadece PDF a칞mak i칞in) -->
        <activity
            android:name=".PDFViewerActivity"
            android:theme="@style/LaunchTheme"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|smallestScreenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode"
            android:hardwareAccelerated="true"
            android:screenOrientation="portrait"
            android:exported="false">
        </activity>

        <!-- 游릭 YEN캻: InAppWebView i칞in gerekli activity -->
        <activity
            android:name="com.pichillilorenzo.flutter_inappwebview.InAppBrowserActivity"
            android:configChanges="orientation|screenSize|screenLayout|keyboardHidden"
            android:hardwareAccelerated="true"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
            android:exported="false" />

        <activity
            android:name="com.pichillilorenzo.flutter_inappwebview.ChromeCustomTabsActivity"
            android:exported="false" />

        <activity
            android:name="com.pichillilorenzo.flutter_inappwebview.ChromeSafariBrowserActivity"
            android:configChanges="orientation|screenSize|screenLayout|keyboardHidden"
            android:hardwareAccelerated="true"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
            android:exported="false" />

    </application>

</manifest>
